<div class="row">
  <div class="col-sm-12">
    <ul class="list-inline">
      <li>
        <%= link_to 'Add Advertisement', new_admin_advertisement_path, class: 'btn btn-primary' %>
      </li>
    </ul>
  </div>
</div>

<form action="/admin/advertisements">
  <input type="radio" name="admin_verified" value="<%= params[:admin_verified] = false %>"> Pending
  <input type="radio" name="admin_verified" value="<%= params[:admin_verified] = true %>"> Approved
  <input type="submit">
</form>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <thead>
      <tr class="info">
        <th>Title</th>
        <th>Category</th>
        <th>Subcategory</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @advertisements.each do |advertisement| %>
          <tr>
            <td><%= advertisement.title %></td>
            <td><%= advertisement.subcategory.category.name if advertisement.subcategory.present?%></td>
            <td><%= advertisement.subcategory.name if advertisement.subcategory.present? %></td>
            <td><%= advertisement.user.email %></td>
            <td>
              <% if advertisement.admin_verified? %>
                  <span class="text-success">Verified by admin</span>
                  <%= link_to( 'Un-verify' , admin_approve_admin_advertisement_path(advertisement, admin_verified: false), method: :put, class: 'btn btn-danger btn-xs') %>
              <%elsif !advertisement.advertisement_images.any? %>
                <span style="color:red">minimum one image need</span>
              <%- else %>
                  <span class="text-danger">Not verified</span>
                  <%= link_to( 'Verify' , admin_approve_admin_advertisement_path(advertisement, admin_verified: true), method: :put, class: 'btn btn-success btn-xs') %>
              <%- end %>
              <%= link_to admin_advertisement_path(advertisement) do %>
                  <i class="fa fa-eye"></i>
              <%- end %>
              <%= link_to edit_admin_advertisement_path(advertisement) do %>
                  <i class="fa fa-edit"></i>
              <%- end %>
              <%= link_to admin_advertisement_path(advertisement), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' do %>
                  <i class="fa fa-trash fa-3"></i>
              <%- end %>
            </td>
          </tr>
      <%- end %>
      </tbody>
    </table>
  </div>
</div>

<%= will_paginate @advertisements %>


