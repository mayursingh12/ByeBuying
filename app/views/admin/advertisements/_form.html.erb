<%= simple_form_for [:admin, @advertisement] do |f| %>
    <%= f.input :title %>
    <%= f.input :position, collection: { 'Top' => 1, 'Middle' => 2, 'Bottom' => 3 } , prompt: 'Select Position'%>
    <%= f.input :redirect_link %>
    <%= f.input :category_id, collection: category_for_collection, prompt: 'Select Category'  %>
    <%= f.input :subcategory_id, collection: subcategory_for_collection, prompt: 'Select Subcategory' %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :per_hour_cost %>
    <%= f.input :description %>
    <%= f.submit 'Save', class: 'btn btn-primary'%>
<% end %>