<div class="row">
  <div class="col-xs-12">
    <ul class="list-inline">
      <li><%= link_to 'Add City', new_admin_city_path, class: 'btn btn-primary' %></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <table class="table table_striped">
      <tr class="info">
        <th>City</th>
        <th>State Id</th>
        <th>Action</th>
      </tr>
      <tr>
        <% @cities.each do |city| %>
            <tr>
              <td><%= city.name %></td>
              <td><%= city.state.name %></td>
              <td>
                <%= link_to edit_admin_city_path(city) do %>
                    <i class="fa fa-edit"></i>
                <% end %>
              </td>
            </tr>
        <% end %>
      </tr>
    </table>
  </div>
</div>