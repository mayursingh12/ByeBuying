<div class="row">
  <div class="col-sm-9">
    <%= link_to 'Edit', edit_admin_blog_path(@blog), class: 'btn btn-primary' %>
    <%= link_to 'Delete', admin_blog_path(@blog), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <dl>
      <dt>Heading</dt><dd><%= @blog.heading %></dd>
      <dt>Description</dt><dd><%= @blog.description %></dd>
    </dl>
  </div>
  <div class="col-sm-3">
    <div class="row">
      <% @blog.blog_images.each do |blog_image| %>
        <div class="col-sm-12">
          <%= image_tag blog_image.image.url(BlogImage::DEFAULT_SIZE), class: 'img-responsive' %>
          <% if blog_image.id.present? %>
            <%= link_to admin_blog_blog_image_path(@blog, blog_image), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' do %>
                  <i class="fa fa-trash fa-3"></i>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <fieldset>
      <legend><small>Add new images</small></legend>
      <%= render partial: 'admin/blog_images/form', locals: { blog: @blog, blog_image: @blog.blog_images.new } %>
    </fieldset>
  </div>
</div>