<div class="customer-main-show">
  <div class="row">
    <div class="white-bg">
      <div class="col-sm-6 col-xs-12">
        <div class="add-image-con">
          <div class="row">
            <div class="col-xs-12">
              <div class="img-overflow overflow-ads-img">
                <% @header.header_images.each do |header_image| %>
                <span class="img-con">
                  <%= image_tag header_image.image.url(HeaderImage::DEFAULT_SIZE), class: 'upload-img' %>
                  <% if header_image.id.present? %>
                      <%= link_to customer_header_header_image_path(@header, header_image), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' do %>
                          <i class="fa fa-times cross-icon"></i>
                      <%- end %>
                  <%- end %>
                </span>
              <%- end %>
              </div>
            </div>
          </div>
          <% unless @header.header_images.count > 2 %>
              <fieldset>
                <legend class="add-new-text"><small>Add new images</small></legend>
                <%= render partial: 'customer/header_images/form', locals: { header: @header, header_image: @header.header_images.new } %>
              </fieldset>
          <% end %>
        </div>
      </div>
      <div class="col-sm-6 col-xs-12">
        <div class="row">
          <div class="col-xs-12">
            <h2>DETAIL</h2>
          </div>
          <div class="col-xs-12">
            <div class="product-detail">
              <div class="row">
                <div class="col-xs-5">
                  <h4>Title:</h4>
                </div>
                <div class="col-xs-7">
                  <p><%= @header.title %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12">
            <div class="product-detail">
              <div class="row">
                <div class="col-xs-5">
                  <h4>Status:</h4>
                </div>
                <div class="col-xs-7">
                  <p><%= @header.admin_verified? ? 'Approved' : 'Pending' %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12">
            <div class="product-detail">
              <div class="row">
                <div class="col-xs-5">
                  <h4>Category:</h4>
                </div>
                <div class="col-xs-7">
                  <p><%= @header.subcategory.category.name %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12">
            <div class="product-detail">
              <div class="row">
                <div class="col-xs-5">
                  <h4>Subcategory:</h4>
                </div>
                <div class="col-xs-7">
                  <p><%= @header.subcategory.name %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12">
            <div class="product-detail">
              <div class="row">
                <div class="col-xs-5">
                  <h4>Per hour cost:</h4>
                </div>
                <div class="col-xs-7">
                  <p><i class="fa fa-inr" aria-hidden="true"></i> <%= @header.per_hour_cost %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12">
            <div class="product-detail">
              <div class="row">
                <div class="col-xs-5">
                  <h4>Start at:</h4>
                </div>
                <div class="col-xs-7">
                  <p><%= @header.start_at.strftime(time_format) %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12">
            <div class="product-detail">
              <div class="row">
                <div class="col-xs-5">
                  <h4>End at:</h4>
                </div>
                <div class="col-xs-7">
                  <p><%= @header.end_at.strftime(time_format) %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12">
            <h2>Others</h2>
          </div>
          <div class="col-xs-12">
            <div class="product-detail">
              <h4>Description:</h4>
              <p><%= @header.description%></p>
            </div>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>


<script type="text/javascript" charset="utf-8">
    $('.header-image-save').hide();

    $('#header_image_image').change(function(){
        if ($("#header_image_image").val().length > 0){
            $('.header-image-save').show();
        }
    });
</script>

