<div class="customer-main-con">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="page-title">My Enquiries</h1>
      <div class="customer-main-show">
        <% if @enquiries[:customer_enquiries].present?%>
            <ul class="nav nav-tabs">
              <li class="active"><a data-toggle="tab" href="#enquiry">Enquiry(<%= @enquiries[:customer_enquiries].where(status: 'Enquiry').count%>)</a></li>
              <li><a data-toggle="tab" href="#quoted">Quoted(<%= @enquiries[:customer_enquiries].where(status: 'Quoted').count%>)</a></li>
              <li><a data-toggle="tab" href="#confirmed">Confirmed(<%= @enquiries[:customer_enquiries].where(status: 'Confirmed').count%>)</a></li>
            </ul>

            <div class="tab-content">
              <div id="enquiry" class="tab-pane fade in active">
                <%if @enquiries[:customer_enquiries].where(status: 'Enquiry').any? %>
                    <% @enquiries[:customer_enquiries].where(status: 'Enquiry').each do |customer_enquiry| %>
                        <%= link_to customer_enquiry_path(customer_enquiry) do %>
                            <div class="white-bg">
                              <div class="col-md-2 col-sm-3 col-xs-12 text-center">
                                <div class="add-image-con">
                                  <% if (customer_enquiry.product && customer_enquiry.product.product_images.any?) %>
                                  <%= image_tag customer_enquiry.product.product_images.first.image.url(ProductImage::DEFAULT_SIZE), class: 'img-responsive' %>
                                  <% else %>
                                   <%= image_tag "theme_img/500x500.png", class: 'img-responsive' %>
                                  <% end %>
                                </div>
                              </div>
                              <div class="col-md-10 col-sm-9 col-xs-12">
                                <h2 class="description"><%= customer_enquiry.is_product ?  customer_enquiry.product.name.capitalize : customer_enquiry.service.service_description.capitalize %></h2>
                                <h2 class="heading" style="padding-top: 0;"><%= customer_enquiry.is_product ? 'Product' : 'Service' %></h2>
                                <!--<span style="color: #000"><%#= customer_enquiry.status %></span>-->
                                <h5 class="time-option"><%= customer_enquiry.start_at.strftime(time_format) %> - <%= customer_enquiry.end_at.strftime(time_format) %></h5>
                                <p class="description"><%= customer_enquiry.description %></p>
                              </div>
                              <div class="clearfix"></div>
                            </div>
                        <% end %>
                    <% end %>
                <%else%>
                    <div class="gap"></div>
                    <h2 class="text-center">No Enquiry Available</h2>
                <%end%>

              </div>
              <div id="quoted" class="tab-pane fade">
                <%if @enquiries[:customer_enquiries].where(status: 'Quoted').any? %>
                    <% @enquiries[:customer_enquiries].where(status: 'Quoted').each do |customer_enquiry| %>
                        <%= link_to customer_enquiry_path(customer_enquiry) do %>
                            <div class="white-bg">
                              <div class="col-md-2 col-sm-3 col-xs-12 text-center">
                                <div class="add-image-con">
                                  <% if (customer_enquiry.product && customer_enquiry.product.product_images.any?) %>
                                  <%= image_tag customer_enquiry.product.product_images.first.image.url(ProductImage::DEFAULT_SIZE), class: 'img-responsive' %>
                                  <% else %>
                                   <%= image_tag "theme_img/500x500.png", class: 'img-responsive' %>
                                  <% end %>
                                </div>
                              </div>
                              <div class="col-md-10 col-sm-9 col-xs-12">
                                <h2 class="description"><%= customer_enquiry.is_product ?  customer_enquiry.product.name.capitalize : customer_enquiry.service.service_description.capitalize %></h2>
                                <h2 class="heading" style="padding-top: 0;"><%= customer_enquiry.is_product ? 'Product' : 'Service' %></h2>
                                <!--<span style="color: #000"><%#= customer_enquiry.status %></span>-->
                                <h5 class="time-option"><%= customer_enquiry.start_at.strftime(time_format) %> - <%= customer_enquiry.end_at.strftime(time_format) %></h5>
                                <p class="description"><%= customer_enquiry.description %></p>
                              </div>
                              <div class="clearfix"></div>
                            </div>
                        <% end %>
                    <% end %>
                <%else%>
                    <div class="gap"></div>
                    <h2 class="text-center">No Quote Available</h2>
                <%end%>
              </div>
              <div id="confirmed" class="tab-pane fade">
                <%if @enquiries[:customer_enquiries].where(status: 'Confirmed').any? %>
                    <% @enquiries[:customer_enquiries].where(status: 'Confirmed').each do |customer_enquiry| %>
                        <%= link_to customer_enquiry_path(customer_enquiry) do %>
                            <div class="white-bg">
                              <div class="col-md-2 col-sm-3 col-xs-12 text-center">
                                <div class="add-image-con">
                                  <% if (customer_enquiry.product && customer_enquiry.product.product_images.any?) %>
                                  <%= image_tag customer_enquiry.product.product_images.first.image.url(ProductImage::DEFAULT_SIZE), class: 'img-responsive' %>
                                  <% else %>
                                   <%= image_tag "theme_img/500x500.png", class: 'img-responsive' %>
                                  <% end %>
                                </div>
                              </div>
                              <div class="col-md-10 col-sm-9 col-xs-12">
                                <h2 class="description"><%= customer_enquiry.is_product ?  customer_enquiry.product.name.capitalize : customer_enquiry.service.service_description.capitalize %></h2>
                                <h2 class="heading" style="padding-top: 0;"><%= customer_enquiry.is_product ? 'Product' : 'Service' %></h2>
                                <!--<span style="color: #000"><%#= customer_enquiry.status %></span>-->
                                <h5 class="time-option"><%= customer_enquiry.start_at.strftime(time_format) %> - <%= customer_enquiry.end_at.strftime(time_format) %></h5>
                                <p class="description"><%= customer_enquiry.description %></p>
                              </div>
                              <div class="clearfix"></div>
                            </div>
                        <% end %>
                    <% end %>
                <%else%>
                    <div class="gap"></div>
                    <h2 class="text-center">No Confirm Enquiry Available</h2>
                <%end%>

              </div>
            </div>
        <% else %>
            <h2 class="text-center">No Enquiry Available</h2>
        <% end %>
      </div>
    </div>
  </div>
</div>