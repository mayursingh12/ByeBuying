<%= simple_form_for [:customer, @product] do |f| %>
    <%= f.input :category_id, collection: category_for_collection, prompt: 'Select category' %>
    <%= f.input :gender, collection: ['Male', 'Female'], prompt: 'Select gender'%>
    <%= f.input :subcategory_id, collection: subcategory_for_collection, prompt: 'Select subcategory' %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :technical_specification %>
    <%= f.input :state_id %>
    <%= f.input :city_id %>
    <%= f.input :location %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :quantity %>
    <%= f.input :rent, collection: ['Per day', 'Per week', 'Per month'], prompt: 'choose rent' %>
    <%= f.input :refundable_security %>
    <%= f.input :cost_of_replacement %>
    <%= f.input :youtube_link %>
    <%= f.input :other %>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>