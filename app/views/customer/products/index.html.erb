<div class="row">
  <div class="col-sm-12">
    <ul class="list-inline">
      <li>
        <%= link_to 'Add Product', new_customer_product_path, class: 'btn btn-primary' %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <thead>
      <tr class="info">
        <th>Name</th>
        <th>Start at</th>
        <th>End at</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.start_at.strftime(time_format) %></td>
            <td><%= product.start_at.strftime(time_format) %></td>
            <td>
              <%= link_to edit_customer_product_path(product) do %>
                  <i class="fa fa-edit"></i>
              <% end %>
            </td>
          </tr>
      <%- end %>
      </tbody>
    </table>
  </div>
</div>
