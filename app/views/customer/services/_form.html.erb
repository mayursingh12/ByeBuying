<%= simple_form_for [:customer, @service] do |f| %>
    <%= f.input :category_id, collection: membership_and_space, prompt: 'Select category' %>
    <%= f.input :subcategory_id, collection: [], prompt: 'Select subcategory' %>
    <%= f.input :nature_of_service %>
    <%= f.input :club_name %>
    <%= f.input :membership_plan %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :area_in_meters %>
    <%= f.input :amenities_available %>
    <%= f.input :service_description %>
    <%= f.input :state_id, collection: state_for_collection, prompt: 'Select state' %>
    <%= f.input :city_id, collection: [], prompt: 'Select city' %>
    <%= f.input :location %>
    <%= f.input :price_type, collection: ['Per hour','Per day', 'Per week', 'Per month'], prompt: 'Choose price' %>
    <%= f.input :youtube_link %>
    <%= f.input :other %>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>