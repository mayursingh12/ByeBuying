<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <div class="mfp-dialog clearfix" id="nav-login-dialog">
      <h3 class="widget-title">Register</h3>
      <p>Welcome, Register to get Enter</p>
      <hr />
      <%= simple_form_for :customer, :url => customer_sign_up_path do |f| %>
          <div class="form-group">
            <%= f.input :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.input :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.input :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, class: 'form-control' %>
          </div>
          <%= submit_tag 'Sign Up', class: 'btn btn-primary' %>
      <%- end %>
      <div class="gap gap-small"></div>
      <ul class="list-inline">
        <li>
          <%= link_to 'Sign in', customer_path, class: 'popup-text' %>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-sm-4"></div>
</div>